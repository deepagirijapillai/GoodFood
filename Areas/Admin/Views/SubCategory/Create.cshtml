@model GoodFood.Models.SubCategory
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add SubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Add SubCategory</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label">SubCategory Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="CategoryId" class="form-label">Select Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

