@model IEnumerable<GoodFood.Models.Restaurant>
@{
    ViewData["Title"] = "My Restaurants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">My Restaurants</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Restaurant</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Description</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center text-muted">No restaurants found.</td></tr>
        }
    </tbody>
</table>
